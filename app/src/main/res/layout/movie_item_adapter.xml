<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivMoviePoster"
        android:layout_width="90dp"
        android:layout_height="135dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:contentDescription="@null" />

    <ProgressBar
        android:id="@+id/pbImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/tvMovieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ivMoviePoster"
        android:layout_alignStart="@+id/ivMoviePoster"
        android:layout_below="@+id/ivMoviePoster"
        android:maxLines="2" />

    <TextView
        android:id="@+id/tvMovieNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvMovieTitle"
        android:layout_alignStart="@+id/tvMovieTitle"
        android:layout_below="@+id/tvMovieTitle"
        android:layout_marginStart="-4dp"
        android:drawableStart="@mipmap/ic_star" />

</RelativeLayout>